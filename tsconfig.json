{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "moduleDetection": "auto",
    "module": "NodeNext",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app": ["./src/application.ts"],
      "@engine": ["./src/engine/engine.ts"],
      "@engine/renderer": ["./src/engine/renderer.ts"],
      "@engine/ui": ["./src/engine/ui/export.ts"],
      "@engine/math": ["./src/engine/math/export.ts"],
      "@engine/entities": ["./src/engine/entities/export.ts"]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "skipLibCheck": false,
    "skipDefaultLibCheck": false,
    "outDir": "dist"
  }
}
